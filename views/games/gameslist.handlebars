<link rel="stylesheet" href="/public/css/gameslist.css">
<div class="center">
    <form id="game-search" method="POST" action-"/search">
        <label for ="search">Search:</label>
        <input id="search" type="text" name="searchTerm">
        <button type="submit">Submit</button>
    </form>
</div>

<!-- Iterate Through Games List collection -->
<ul>
    {{#each games}}
    <li class="games">
        <div class="score">
            <span>0.0</span> <!-- replace with {{averageScore}} -->
        </div>
        <img src="{{image}}" alt="{{title}}">
        <div class="info">
            <a href="/{{title}}" class="title">{{title}}</a>
            <p class="subinfo">({{releaseYear}}) <span>{{publisher}}</span></p>
            <table>
                <tr>
                    <th>Genres:</th>
                    <td>{{genres}}</td>
                </tr>
                <tr>
                    <th>Platforms:</th>
                    <td>{{platforms}}</td>
                </tr>
                <tr>
                    <th>Prices:</th>
                    <td>{{prices}}</td>
                </tr>
            </table>
        </div>

    </li>
    {{/each}}
</ul>